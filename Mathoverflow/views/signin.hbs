<!-- LOG IN-->

<div class="container" id="login">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3 class="footer_title">Log In</h3>
                <div class="d-flex justify-content-end social_icon">
                    <a href="https://www.facebook.com/"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://www.youtube.com/"><i class="fab fa-youtube-square"></i></a>
                    <a href="https://twitter.com/"><i class="fab fa-twitter-square"></i></a>
                </div>
            </div>
            <div class="card-body">


                <form id="form" name="signup_form" action="/login" method="POST">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" id="username" name="username" class="form-control" placeholder="username" />
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="password" />
                    </div>

                    <div class="form-group" id="login2">

                        <button id="signup_button" type="submit">Log In</button>
                    </div>


                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links" id="noaccount">
                    Don't have an account?<a href="/signup">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
</div>